<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/cell_00" android:layout_width="100dp" android:layout_height="100dp" android:background="@android:color/darker_gray"/>
            <ImageView android:id="@+id/cell_01" android:layout_width="100dp" android:layout_height="100dp" android:background="@android:color/darker_gray"/>
            <ImageView android:id="@+id/cell_02" android:layout_width="100dp" android:layout_height="100dp" android:background="@android:color/darker_gray"/>
        </TableRow>

        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/cell_10" android:layout_width="100dp" android:layout_height="100dp" android:background="@android:color/darker_gray"/>
            <ImageView android:id="@+id/cell_11" android:layout_width="100dp" android:layout_height="100dp" android:background="@android:color/darker_gray"/>
            <ImageView android:id="@+id/cell_12" android:layout_width="100dp" android:layout_height="100dp" android:background="@android:color/darker_gray"/>
        </TableRow>

        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/cell_20" android:layout_width="100dp" android:layout_height="100dp" android:background="@android:color/darker_gray"/>
            <ImageView android:id="@+id/cell_21" android:layout_width="100dp" android:layout_height="100dp" android:background="@android:color/darker_gray"/>
            <ImageView android:id="@+id/cell_22" android:layout_width="100dp" android:layout_height="100dp" android:background="@android:color/darker_gray"/>
        </TableRow>

    </TableLayout>

</LinearLayout>
